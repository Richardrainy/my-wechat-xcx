/* pages/message/message-detail/message-detail.wxss */
.container {
  display: flex;
  flex-direction: column;
  margin: 0 30rpx;
}

.author-date {
  display: flex;
  flex-direction: row;
  margin: 15rpx 0;
  align-items: center;
  justify-content: space-between;
  font-size:13px;
}

.author-box {
  display:flex;
  flex-direction: row;
  align-items: center;
}

.avatar {
  height: 50rpx;
  width: 50rpx;
}

.author {
  font-weight: 300;
  margin-left: 20rpx;
  color: #666;
}

.date {
  color: #919191;
 
}

.images{
  width:100%;
  height:340rpx;
}
swiper{
  width:100%;
  height:340rpx;
}

swiper image{
  width:100%;
  height:340rpx;
}
.detail {
  color: #666;
  margin: 15rpx 0;
  line-height: 44rpx;
  letter-spacing: 1px;
  font-size:14px;
}

/*点赞和评论*/
.tool{
  height: 64rpx;
  margin: 10rpx 28rpx 20rpx 0;
  display: flex;
  justify-content: center;
}
.tool-item{
  align-items: center;
  margin-right: 30rpx;
  display: flex;
}

.tool-item:last-child{
  margin-right: 0rpx;
}

.tool-item image{
  height: 30rpx;
  width:30rpx;
  margin-right: 10rpx;
}
