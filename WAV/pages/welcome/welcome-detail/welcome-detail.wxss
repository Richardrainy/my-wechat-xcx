/* pages/welcome/welcome-detail/welcome-detail.wxss */
.container{
  padding: 0 10rpx;
  display: flex;
  flex-direction: column;
  background-color:lightblue;
}
.name{
  text-align: center;
  color:red;
  font-size: 36rpx;
  font-weight: bold;
}
.message{
  margin: 10rpx;
  width: 100%;
  height: 40rpx;
  color:black;
  font-size: 20rpx;
  font-weight: normal;
  line-height: 20rpx;
  position: relative;
}
.message .organizer{
  position: absolute;
  left:30rpx;
  top: 0;
}
.message .leader{
  position: absolute;
  right:30rpx;
  top: 0;
}
.message .date{
  position: absolute;
  left:30rpx;
  bottom: 0;
}
.message .location{
  position: absolute;
  right:30rpx;
  bottom: 0;
}
.introduction{
  width: 100%;
  height: auto;
  color:black;
  font-size: 28rpx;
  font-weight: normal;
  line-height: 32rpx;
  margin-bottom: 10rpx;
}
.image{
  margin: 10rpx auto;
  width:540rpx;
  height:720rpx;
}
.demand{
  width: 100%;
  height: auto;
  color:black;
  font-size: 28rpx;
  font-weight: normal;
  line-height: 32rpx;
}
.hover{
  color: red;
}
.tool{
  width: 100%;
  height: 64rpx;
  padding: 0 10rpx;
  display: flex;
  justify-content: center;
  background-color: lightblue;
}
.tool-item{
  align-items: center;
  margin-right: 30rpx;
  display: flex;
}

.tool-item:last-child{
  margin-right: 0rpx;
}

.tool-item image{
  height: 30rpx;
  width:30rpx;
  margin-right: 10rpx;
}
